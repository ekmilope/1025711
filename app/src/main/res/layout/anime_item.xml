<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView android:id="@+id/text_nombre" android:textSize="40sp" android:textColor="#0000ff"
        android:layout_width="wrap_content" android:layout_toRightOf="@+id/imagen" android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/text_autor" android:textSize="25sp" android:layout_alignLeft="@+id/text_nombre"
        android:layout_below="@+id/text_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/text_anio" android:textSize="15sp"
        android:layout_alignLeft="@+id/text_autor" android:layout_below="@+id/text_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>